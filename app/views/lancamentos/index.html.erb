<h3>Lançamentos</h3>
<form id="filtroLancamentos">Ano: <%= @ano %>, Mês:<input id="spinMes" class="input-mini" name="mes" value=<%= @mes %>></input></form>

<a href="#editarLancamentoModal" role="button" class="btn" data-toggle="modal"><i class="icon-plus"></i> Criar Novo Lançamento...</a>

<table class="table table-bordered table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Natureza</th>
      <th>Valor R$</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @lancamentos.each do |lancto| %>
    <tr>
      <td><%= lancto.natureza.nome %></td>
      <td><%= lancto.valor %></td>
      <td><a class="btn" href="#"><i class="icon-pencil"></i></a></td>
    </tr>
  <% end %>
  </tbody>
</table>

<!-- Modal -->
<div id="editarLancamentoModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">Editar Lançamento</h3>
  </div>
  <form>
    <div class="modal-body inputs">
      <fieldset>
        <label>Natureza</label>
        <input type="text" placeholder="Escolha uma natureza">
        <label>Valor</label>
        <input type="text" placeholder="Valor do lançamento">
      </fieldset>
    </div>

    <div class="modal-footer actions">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      <button class="btn btn-primary">Save changes</button>
    </div>
  </form>

</div>