<h3>Lançamentos</h3>
<form id="filtroLancamentos">Ano: <%= @ano %>, Mês:<input id="spinMes" class="input-mini" name="mes" value=<%= @mes %>><span id="spanCarregando"><%= image_tag "loader.png" %> Carregando...</span></input></form>

<a href="#editarLancamentoModal" role="button" class="btn" data-toggle="modal"><i class="icon-plus"></i> Criar Novo Lançamento...</a>

<div id="lancamentos">
  <%= render 'lancamentos' %>
</div>

<!-- Modal -->
<div id="editarLancamentoModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">Editar Lançamento</h3>
  </div>
  <form>
    <div class="modal-body inputs">
      <fieldset>
        <label>Natureza</label>
        <input type="text" placeholder="Escolha uma natureza">
        <label>Valor</label>
        <input type="text" placeholder="Valor do lançamento">
      </fieldset>
    </div>

    <div class="modal-footer actions">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      <button class="btn btn-primary">Save changes</button>
    </div>
  </form>

</div>