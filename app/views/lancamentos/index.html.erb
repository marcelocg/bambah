<h3>Lançamentos</h3>
<form id="filtroLancamentos">Ano: <%= @ano %>, Mês:<input id="spinMes" class="input-mini" name="mes" value=<%= @mes %>><span id="spanCarregando"> <%= image_tag "loader.png" %> Carregando...</span></input></form>

<button id="btnCriarLancamento" class="btn"><i class="icon-plus"></i> Criar Novo Lançamento...</button>

<div id="lancamentos">
  <%= render 'lancamentos' %>
</div>

<!-- Modal -->
<div id="editarLancamentoModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">Editar Lançamento</h3>
  </div>
  <form id="formEditarLancamento">
    <div class="modal-body inputs">
      <fieldset>
        <input id="inputId" type="hidden">
        <div class="ui-widget">
          <label>Natureza</label>
          <input id="inputNatureza" type="text" placeholder="Escolha uma natureza">
        </div>
        <label>Valor</label>
        <input id="inputValor" type="text" placeholder="Valor do lançamento">
        <label>Mês:</label>
        <input id="inputMes" class="input-mini" name="mes" value=<%= @mes %>>
      </fieldset>
    </div>

    <div class="modal-footer actions">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      <button class="btn btn-primary">Save changes</button>
    </div>
  </form>

</div>